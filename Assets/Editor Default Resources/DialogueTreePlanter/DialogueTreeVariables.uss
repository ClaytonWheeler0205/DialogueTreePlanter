:root 
{
	--dtp-colors-grid-background: #2b2b2b;
	--dtp-colors-grid-lines: rgba(51, 51, 51, 0.4);
	--dtp-colors-grid-thick-lines: rgba(51, 51, 51, 1);

	/* Dev note: Please give these variables better names */
	--dtp-colors-window-dark-gray-1: #1D1D1E;
	--dtp-colors-window-dark-gray-2: #2B2D2F;
	--dtp-colors-window-dark-gray-3: #212325;
