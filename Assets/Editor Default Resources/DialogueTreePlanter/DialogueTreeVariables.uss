	--dtp-metrics-window-pixels-0: 0px;
	--dtp-metrics-window-pixels-2: 2px;
	--dtp-metrics-window-pixels-4: 4px;
	--dtp-metrics-window-pixels-8: 8px;
	--dtp-metrics-window-pixels-11: 11px;
	--dtp-metrics-window-pixels-16: 16px;
	--dtp-metrics-window-pixels-25: 25px;
	--dtp-metrics-window-pixels-35: 35px;
	--dtp-metrics-window-pixels-160: 160px;
	--dtp-metrics-window-pixels-240: 240px;
	--dtp-metrics-window-pixels-600: 600px;
	--dtp-metrics-window-pixels-1000: 1000px;
}